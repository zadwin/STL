        // "/usr/local/Cellar/opencv/4.0.1/include/opencv4"
        // "/usr/local/include/opencv4"
    ],
    "C_Cpp.default.compilerArgs": [
        "-g",
        "${file}",
        "-std=c++11",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
    ],
